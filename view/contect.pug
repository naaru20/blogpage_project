    <main class="contect-box">

        <form class="form-area max-width-1 m-auto mt my" method="post" action="/contect">
            <h1 class="contect-hdg">FILL UP THIS FORM TO CONTECT US</h1>
            <div class="form-text">
                <input type="text" name="name" placeholder="YOUR GOOD NAME">
            </div>
            <div class="form-text">
                <input type="email" name="email" placeholder="YOUR EMAIL">
            </div>
            <div class="form-text">
                <textarea name="help" placeholder="HOW CAN I HELP YOU!"  cols="30" rows="10"></textarea>
            </div>
            <div class="form-text">
                <button class="btn">SUBMIT</button>
            </div>
        </form>

    </main>


    <footer>
