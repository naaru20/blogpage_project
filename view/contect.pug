        <div class="right">
            <form action="/search" method="get">
                <input type="search" placeholder="Search a article..." name="query" class="search-box">
                <button class="btn">Search</button>
            </form>
        </div>
    </nav>

    <div class="max-width-2 m-auto m-t">
